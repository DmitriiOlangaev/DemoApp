<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SearchStateChoosingToFragment">

    <ImageButton
        android:id="@+id/hardRouteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hard_route"
        app:layout_constraintEnd_toEndOf="@id/hardRouteTitleTextView"
        app:layout_constraintStart_toStartOf="@id/hardRouteTitleTextView"
        app:layout_constraintTop_toTopOf="parent">

    </ImageButton>


    <ImageButton
        android:id="@+id/whereverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wherever"
        app:layout_constraintEnd_toEndOf="@id/whereverTitleTextView"
        app:layout_constraintStart_toStartOf="@id/whereverTitleTextView"
        app:layout_constraintTop_toTopOf="@id/hardRouteButton">


    </ImageButton>


    <ImageButton
        android:id="@+id/holidaysButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/holidays"
        app:layout_constraintEnd_toEndOf="@id/holidaysTitleTextView"
        app:layout_constraintStart_toStartOf="@id/holidaysTitleTextView"
        app:layout_constraintTop_toTopOf="@id/whereverButton">


    </ImageButton>

    <ImageButton
        android:id="@+id/hotTicketsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hot_tickets"
        app:layout_constraintEnd_toEndOf="@id/hotTicketsTitleTextView"
        app:layout_constraintStart_toStartOf="@id/hotTicketsTitleTextView"
        app:layout_constraintTop_toTopOf="parent">

    </ImageButton>

    <TextView
        android:id="@+id/hardRouteTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hard_route_title"
        app:layout_constraintEnd_toStartOf="@+id/whereverTitleTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hardRouteButton">

    </TextView>


    <TextView
        android:id="@+id/whereverTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wherever_title"
        app:layout_constraintEnd_toStartOf="@+id/holidaysTitleTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hardRouteTitleTextView"
        app:layout_constraintTop_toTopOf="@id/hardRouteTitleTextView">

    </TextView>


    <TextView
        android:id="@+id/holidaysTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/holidays_title"
        app:layout_constraintEnd_toStartOf="@+id/hotTicketsTitleTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/whereverTitleTextView"
        app:layout_constraintTop_toTopOf="@id/whereverTitleTextView">

    </TextView>

    <TextView
        android:id="@+id/hotTicketsTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hot_tickets_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/holidaysTitleTextView"
        app:layout_constraintTop_toTopOf="@id/holidaysTitleTextView">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/toDestinationSuggestionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hardRouteTitleTextView">

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>