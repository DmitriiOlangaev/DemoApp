<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clForActvs"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_marginTop="@dimen/actvFrom_margin_top"
        android:background="@color/Grey1"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/vActvSepLine"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/Grey3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivLens"
            app:layout_constraintEnd_toEndOf="parent">

        </View>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilFrom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingStart="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/vActvSepLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:id="@+id/actvFrom"
                style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox.actvDest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Откуда - Москва">

            </AutoCompleteTextView>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/vActvSepLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivLens"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:id="@+id/actvTo"
                style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox.actvDest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Grey2"
                android:hint="Куда - Турция">

            </AutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>


        <ImageView
            android:id="@+id/ivLens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <ImageButton
            android:id="@+id/btnRemoveFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/remove_destination"
            app:layout_constraintBottom_toTopOf="@id/btnRemoveTo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageButton>


        <ImageButton
            android:id="@+id/btnRemoveTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/remove_destination"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnRemoveFrom">

        </ImageButton>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>